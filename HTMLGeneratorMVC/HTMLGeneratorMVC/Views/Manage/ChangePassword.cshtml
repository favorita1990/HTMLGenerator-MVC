@model HTMLGeneratorMVC.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<div class="col-xs-12 col-sm-6 col-md-5 panel panel-default">
    <div class="panel-body">
        <h2  class="text-center text-success">Change Password Form</h2>

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-xs-2 col-sm-2 col-md-2 control-label">Old Password:</div>
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-xs-8 col-sm-8 col-md-8" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-2 col-sm-2 col-md-2 control-label">New Password:</div>
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-xs-8 col-sm-8 col-md-8" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-2 col-sm-2 col-md-2 control-label">Confirm Password:</div>
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-xs-8 col-sm-8 col-md-8" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-9 col-sm-7 col-md-7">
                    <input type="submit" value="Change password" class="btn btn-success" />
                </div>
                <div class="col-xs-3 col-sm-5 col-md-5">
                    <a href="@Url.Action("Index", "Manage")" class="btn btn-warning pull-left" role="button">Back</a>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/javascript")
}
